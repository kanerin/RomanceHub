<ul>
  <% @posts.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
    </li>
  <% end %>
</ul>

<%= form_for @post, url: post_lists_path do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
  
    <div class="actions">
      <%= f.submit "投稿" %>
    </div>
  <% end %>
  